<UserControl
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>  
    <Border BorderThickness="2" BorderBrush="#FF793838" CornerRadius="5" Width="200" Height="100" Background="#FFC18282">
      <StackPanel Orientation="Vertical">
        <TextBlock Margin="5" TextAlignment="Center" Foreground="White">Pause Menu</TextBlock>
        <Button Margin="5" Command="{Binding Resume}">Resume</Button>
        <Button Margin="5" Command="{Binding Quit}">Quit</Button>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>