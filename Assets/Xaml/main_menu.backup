<UserControl
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>  
    <Border BorderBrush="White" BorderThickness="2" CornerRadius="5" Width="200" Height="300">
      <StackPanel Orientation="Vertical">
        <Button Margin="5" Command="{Binding NewGame}">New Game</Button>
        <Button Margin="5" Command="{Binding ResumeGame}">Resume Game</Button>
        <Button Margin="5" Command="{Binding ExitGame}">Exit</Button>
      </StackPanel>
    </Border>          
  </Grid>
</UserControl>