<UserControl
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>  
    <Border BorderBrush="White" BorderThickness="2" CornerRadius="5" Width="400" Height="150">
      <StackPanel Orientation="Vertical">
        <TextBlock Margin="5">Are you sure?</TextBlock>
        <TextBlock Margin="5">Starting a new game will delete any game in progress.</TextBlock>
        <Button Margin="5" Command="{Binding ConfirmStart}">Yes, let's start fresh</Button>
        <Button Margin="5" Command="{Binding Cancel}">No, back to the menu</Button>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>